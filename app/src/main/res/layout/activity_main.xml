<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4caf65"
    tools:context="com.xct.nevermore.myapplication.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="13dp">

            <Button
                android:id="@+id/btn_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="日历" />

            <Button
                android:id="@+id/btn_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="pagerslidingtabstrip"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="listView添加头部"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="百度定位"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="进度条"
                android:textAllCaps="false" />
            <Button
                android:id="@+id/btn_flow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="flowlayout"
                android:textAllCaps="false" />
            <Button
                android:id="@+id/btn_statu_bar"
                android:text="状态栏"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_custom"
                android:text="动画效果"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_scroll_back"
                android:text="滚回来"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_swipe_list_view"
                android:text="侧滑listview"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_swipe_list_view1"
                android:text="侧滑listview1"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_key"
                android:text="键盘"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>