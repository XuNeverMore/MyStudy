<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pager_slide"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context="com.xct.nevermore.myapplication.PagerSlideActivity">
    <com.xct.nevermore.myapplication.ui.PagerSlidingTabStrip
        android:id="@+id/pager_strip"
        app:pstsIndicatorColor="#4caf65"
        app:pstsIndicatorHeight="3dp"
        app:pstsDividerColor="#dfdfdf"
        app:pstsScrollOffset="15dp"
        app:zmsTabTextColor="#333"
        app:zmsSelectedTabTextColor="#4caf65"
        app:zmsTabTextSize="15sp"
        app:zmsSelectedTabTextSize="15sp"
        app:pstsShouldExpand="true"
        android:layout_width="match_parent"
        android:layout_height="48dp">
    </com.xct.nevermore.myapplication.ui.PagerSlidingTabStrip>
    <android.support.v4.view.ViewPager
        android:layout_below="@+id/pager_strip"
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
